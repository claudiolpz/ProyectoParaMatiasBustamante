generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  lastname String
  role     UserRole @default(user)

  changes Change[]
}

enum UserRole {
  admin
  user
  supervisor
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Int
  stock       Int
  image       String?
  categoryId Int
  sku         String?  @unique
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  productChanges Change[]
  category   Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Product[]
}
model Change {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int
  type      ChangeType
  note      String?
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

enum ChangeType {
  entrada
  salida
  ajuste
  activado
  desactivado
  eliminado
}



