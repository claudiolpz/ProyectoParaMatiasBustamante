FROM node:20-alpine

WORKDIR /app

# Copiar archivos de configuraci√≥n
COPY package*.json ./
COPY tsconfig.json ./
COPY prisma/ ./prisma/

# Instalar dependencias
RUN npm ci

# Generar cliente Prisma
RUN npx prisma generate

# Exponer puerto
EXPOSE 4000

# Variables de entorno
ENV NODE_ENV=development

# Comando de desarrollo
CMD ["npm", "run", "dev"]
