# Ejemplo de configuración para producción en la nube
# Copia este archivo como .env.production y completa los valores

# Base de datos (usar la URL completa de tu proveedor de nube)
DATABASE_URL="postgresql://usuario:password@host:puerto/database?schema=public"

# Backend
BACKEND_PORT=4000
JWT_SECRET=tu_jwt_secret_super_seguro_aqui
FRONTEND_URL=https://tu-dominio-frontend.com
BACKEND_URL=https://tu-dominio-backend.com

# CORS Configuration
CORS_DEV_ORIGINS=https://tu-dominio-frontend.com
CORS_ALLOW_CREDENTIALS=true
CORS_DEVELOPMENT_MODE=false
CORS_DEBUG=false

# Node Environment
NODE_ENV=production
